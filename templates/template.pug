doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title #{name}'s Resume
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css")
    style.
        html {
            margin: 0;
            height: 100vh;
            width: 100vw;
        }
        body {
            margin: 0;
            height: 100vh;
            width: 100vw;
            font-family: "Montserrat Medium", sans-serif;
            font-size: x-small;
        }
        a {
            text-decoration: none;
            color: black;
        }
        ul {
            margin: 0 0 0 15px;
            padding: 0 0 0 0;
            list-style-type: none;
        }
        #root {
            box-sizing: border-box;
            display: grid;
            grid-gap: 10px;
            padding-left: 10px;
            padding-right: 10px;
            height: 100%;
            width: 100%;
            grid-template-columns: 250px auto;
            grid-template-rows: auto 30px;
            grid-template-areas:
          "sidebar main"
          "sidebar footer";
        }
        #sidebar {
            grid-area: sidebar;
            background: none;
            display: flex;
            flex-flow: column;
        }
        #main {
            grid-area: main;
            background: none;
            padding: 10px;
            font-size: 12px;
        }
        #padding {
            flex: auto;
            margin-bottom: 0;
        }
        #footer {
            grid-area: footer;
            background: none;
            /* center text */
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: xx-small;
            font-style: italic;
        }
        .fa-ul {
            margin-left: 20px
        }
        .fa-xs {
            /* Ensures the fa-xs icons are centered */
            position: relative;
            transform: translateY(-6%);
        }
        .sidebar-content {
            background: #f5f6f5;
            margin-bottom: 5px;
            padding: 10px;
            font-size: 10px;
        }
        .sidebar-your-name {
            font-size: 26px;
            color: #598547;
        }
        .sidebar-your-title {
            font-size: 12px;
        }
        .main-content {
            background: none;
            margin: 10px;
        }
        .section-title {
            font-size: 20px;
            color: #598547;
        }
        .sub-section-title {
            font-size: 12px;
            font-weight: 900;
        }

  #root
    #sidebar
      #name.sidebar-content
        span.sidebar-your-name #{name}
        br
        if bannerTitle
          span.sidebar-your-title #{bannerTitle}
          br

      if contactInfo
        #contact.sidebar-content
          span.section-title Contact Info
          br
          ul.fa-ul
            each info in contactInfo
              li
                span.fa-li
                  i(class=info.faIconClass)
                a(href=info.link) #{info.value}

      if keySkills
      #skills.sidebar-content
        span.section-title Key Skills
        br
        each skill in keySkills
          span.sub-section-title #{skill.title}
          br
          ul.fa-ul
            li
              span.fa-li
                i(class='fas fa-chevron-right fa-xs')
              span #{skill.details}
          br

      if education
        #education.sidebar-content
          span.section-title Education
          each degree in education
            br
            span.sub-section-title #{degree.school}
            br
            span #{degree.years}
            br
            span(style='font-style: italic') #{degree.degree}
            br
            each detail in degree.additionalDetails
              ul.fa-ul
                li
                  span.fa-li
                    i(class='fas fa-chevron-right fa-xs')
                  span #{detail}

      if certifications
      #certifications.sidebar-content
        span.section-title Certifications
        each certification in certifications
          br
          span.sub-section-title #{certification.company}
          br
          span
            a(href=certification.link) #{certification.id}
          br
          ul.fa-ul
            each individualCert in certification.list
              li
                span.fa-li
                  i(class='fas fa-chevron-right fa-xs')
                span #{individualCert}

      if hobbies
      #hobbies.sidebar-content
        span.section-title Hobbies
        each hobby in hobbies
          br
          span #{hobby.headline}
          br
          ul.fa-ul
            each detail in hobby.additionalDetails
              li
                span.fa-li
                  i(class='fas fa-chevron-right fa-xs')
                span #{detail}

      // Takes sidebar down to the bottom of the page
      #padding.sidebar-content


    #main
      if profile
        #profile.main-content
          span.section-title Profile
          br
          span #{profile}

      if experience
        #experience.main-content
          span.section-title Experience
          br
          each job in experience
            span #{job.timeFrame}&nbsp;&nbsp;&nbsp;&nbsp;
            span(style="font-weight: 900") #{job.company}&nbsp;&nbsp;&nbsp;&nbsp;
            span #{job.title}
            if job.details
              ul.fa-ul
                each detail in job.details
                  li
                    span.fa-li
                      i(class='fas fa-chevron-right fa-xs')
                    span #{detail}
            else
              // For some reason this _removes_ a br after the ul
              br
            br

      if projects
        #projects.main-content
          span.section-title Projects
          br
          each project in projects
            span #{project.headline}
            br
            ul.fa-ul
              each detail in project.additionalDetails
                li
                  span.fa-li
                    i(class='fas fa-chevron-right fa-xs')
                  span #{detail}
            br

    #footer
      span Generating using my resume generator:&nbsp;
      a(href='https://github.com/nccurry/resume-generator') github.com/nccurry/resume-generator
